<?xml version="1.0" encoding="utf-8"?>
<org.itrgroup.itr.utils.ResizeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
	    <ImageView 
	        android:id="@+id/login_bg"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	    	android:background="@drawable/theme_bg"  />
    </ScrollView>
	
    <Button
	    android:id="@+id/center" 
	    android:layout_height="0dp"
	    android:layout_width="0dp"
	    android:layout_centerHorizontal="true" 
	    android:layout_centerVertical="true" />
    	
	<ImageView
        android:id="@+id/login_icon"
        android:layout_width="188dp"
        android:layout_height="188dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:background="@drawable/login_icon" />
	
	<org.itrgroup.itr.utils.EmailAutoCompleteTextView
        android:id="@+id/email"  
        android:background="@drawable/login_edittext" 
        android:layout_width="300dp"  
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
       	android:layout_above="@id/center"
       	android:layout_marginBottom="46dp"
        android:hint="邮箱"
        android:paddingLeft="10dp"
        android:textColorHint="#30000000"  
        android:singleLine="true"  
        android:textColor="#FFFAFA" />
	
	<EditText  
        android:id="@+id/password" 
        android:background="@drawable/login_edittext"  
        android:password="true"
        android:layout_width="300dp"  
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_above="@id/center"
        android:hint="密码"
        android:paddingLeft="10dp"
        android:textColorHint="#30000000"  
        android:singleLine="true"  
        android:textColor="#FFFAFA" /> 
    
	
	<Button 
	    android:id="@+id/login_button"
	    android:layout_width="300dp"  
        android:layout_height="40dp"
	    android:background="@drawable/button_login_selection"
	    android:layout_below="@id/center"
	    android:layout_marginTop="20dp"
	    android:text="登  录"
	    android:textColor="#C8FFFAFA"
	    android:layout_centerHorizontal="true" />
	
	<Button
	    android:id="@+id/regist_button"
	    android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
	    android:text="注 册"
	    android:textColor="#FFFAFA"
	    android:background="#00000000"
	    android:layout_marginLeft="1dp"
	    android:layout_alignParentBottom="true" />

</org.itrgroup.itr.utils.ResizeLayout>