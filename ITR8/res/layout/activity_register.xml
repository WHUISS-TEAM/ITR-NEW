<?xml version="1.0" encoding="utf-8"?>
<org.itrgroup.itr.utils.ResizeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
    <ScrollView
        android:id="@+id/scroll2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
	    <ImageView 
	        android:id="@+id/register_bg"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	    	android:background="@drawable/theme_bg"  />
    </ScrollView>
  	
    <Button
	    android:id="@+id/center" 
	    android:layout_height="0dp"
	    android:layout_width="0dp"
	    android:layout_centerHorizontal="true" 
	    android:layout_centerVertical="true" />
    
    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="188dp"
        android:layout_height="188dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:background="@drawable/login_icon" />
    
    <org.itrgroup.itr.utils.EmailAutoCompleteTextView
        android:id="@+id/register_email"  
		android:background="@drawable/login_edittext" 
        android:layout_width="300dp"  
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
       	android:layout_above="@id/center"
       	android:layout_marginBottom="41dp"
        android:hint="邮箱"
        android:paddingLeft="10dp"
        android:textColorHint="#30000000"  
        android:singleLine="true"  
        android:textColor="#FFFAFA" />
    	
    <EditText  
        android:id="@+id/register_username" 
        android:background="@drawable/login_edittext"  
        android:layout_width="300dp"  
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_above="@id/center"
        android:hint="昵称"
        android:paddingLeft="10dp"
        android:textColorHint="#30000000"  
        android:singleLine="true"  
        android:textColor="#FFFAFA" />
    
    <EditText  
        android:id="@+id/register_password" 
        android:background="@drawable/login_edittext"  
        android:password="true"
        android:layout_width="300dp"  
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/center"
        android:hint="密码"
        android:paddingLeft="10dp"
        android:textColorHint="#30000000"  
        android:singleLine="true"  
        android:textColor="#FFFAFA" /> 
        
     <EditText  
        android:id="@+id/register_password2" 
        android:background="@drawable/login_edittext"  
        android:password="true"
        android:layout_width="300dp"  
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:layout_below="@id/center"
        android:hint="确认密码"
        android:paddingLeft="10dp"
        android:textColorHint="#30000000"  
        android:singleLine="true"  
        android:textColor="#FFFAFA" /> 
        
     <Button 
	    android:id="@+id/next_button"
	    android:layout_width="300dp"  
        android:layout_height="40dp"
	    android:background="@drawable/button_login_selection"
	    android:layout_below="@id/center"
	    android:layout_marginTop="90dp"
	    android:text="下一步"
	    android:textColor="#C8FFFAFA"
	    android:layout_centerHorizontal="true" />
</org.itrgroup.itr.utils.ResizeLayout>
